{
  "name": "site_summary",
  "version": "1.0.0",
  "description": "Web crawler with AI chat",
  "scripts": {
    "dev:backend": "cd backend && npm run start:dev",
    "dev:frontend": "cd frontend && yarn dev",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && yarn build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && yarn install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "prisma:generate": "cd backend && npx prisma generate",
    "prisma:migrate": "cd backend && npx prisma migrate dev",
    "deploy:frontend": "cd frontend && yarn deploy"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}